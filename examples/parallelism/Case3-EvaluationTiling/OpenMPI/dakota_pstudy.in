# DAKOTA INPUT FILE: dakota_pstudy.in for parallel Case 3 (Evaluation Tiling
# with OpenMPI relative node)

environment,
	tabular_data

method,
	vector_parameter_study
	  step_vector =	 .1  .1	 .1
	  num_steps = 19

variables,
	continuous_design = 3
	  initial_point    1.0   1.0   1.0

# Case 3 (Evaluation Tiling with OpenMPI): Run Dakota in serial launching M=4
# asynchronous local jobs where each will schedule on an appropriate node
# using mpiexec relnode for the parallel analysis 
interface,
	fork,
	  asynchronous 

	  # this must agree with the qsub and driver script files
	  evaluation_concurrency = 4

	  ## For static scheduling (as with text_book_bash_static.sh), uncomment:
	
          #local_evaluation_scheduling static

          # This will guarantee that evaluations are replaced with
          # evaluations modulo the evaluation concurrency
 	  
	  ## Uncomment one of these analysis drivers:
          #analysis_driver = 'text_book_bash_static.sh'
          #analysis_driver = 'text_book_dipy_dynamic.py'
          analysis_driver = 'text_book_mpitile_dynamic.sh'
          
	    parameters_file = 'params.in'
	    results_file = 'results.out'
	    file_tag
	    file_save
            work_directory named 'workdir'
            directory_tag directory_save

responses,
	objective_functions = 1
	nonlinear_inequality_constraints = 2
	no_gradients
	no_hessians
